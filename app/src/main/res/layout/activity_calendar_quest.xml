<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0B0F2A"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/textCalendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Calendar"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:fontFamily="@font/jersey15_regular"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp" />

    <!-- Calendar -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:theme="@style/CalendarWhiteText"/>

    <!-- Add task row -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <EditText
            android:id="@+id/editTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="New task for this day"
            android:textColor="#FFFFFF"
            android:textColorHint="#88FFFFFF"
            android:background="@android:color/transparent"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#0B0F2A"
            android:backgroundTint="#6EC3FF"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <!-- Task list -->
    <ListView
        android:id="@+id/listTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp" />

    <!-- Finish Quest (hidden in non-quest mode) -->
    <Button
        android:id="@+id/btnFinishCalendarQuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Quest"
        android:textAllCaps="false"
        android:textColor="#0B0F2A"
        android:backgroundTint="#6EC3FF"
        android:layout_marginTop="12dp" />

</LinearLayout>
