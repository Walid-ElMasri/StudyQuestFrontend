<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studyquest">

    <!-- âœ… allow calling your FastAPI backend -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="StudyQuest"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyQuest"
        android:usesCleartextTraffic="true">

        <!-- Other screens -->
        <activity android:name=".ApiPlaygroundActivity" />
        <activity android:name=".TextAiActivity" />
        <activity android:name=".BossActivity" />
        <activity android:name=".ProgressActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SocialActivity" />

        <!-- Launcher screen -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
